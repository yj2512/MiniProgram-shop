/* pages/tixian-record/tixian-record.wxss */
.container{
  background-color: #f2f2f2;
  min-height: 1210rpx;
}
.section-ft{
  font-size: 24rpx;
  line-height: 76rpx;
  text-align: center;
  color: #878787;
}
.title{
  background-color: #ffffff;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  text-align: center;
  display: flex;
  justify-content: space-around
}
.tixian-item{
  background-color: #ffffff;
  height: 80rpx;
  font-size: 24rpx;
  line-height: 80rpx;
  margin-top: 2rpx;
  text-align: center;
  display: flex;
  justify-content: space-around
}
.time,.title-item:nth-of-type(1){
  width: 240rpx;
}
.money,.title-item:nth-of-type(2){
  width: 180rpx;
}
.result,.title-item:nth-of-type(3){
  width: 80rpx;
}
.checkResult,.title-item:nth-of-type(4){
  width: 100rpx;
}
.checkResult{
  color: #268bf2
}
/* 动画 */
.animation-box {
  width: 100%;
  position: fixed;
  left: -800rpx;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.section-animation {
  width: 526rpx;
  min-height: 150rpx;
  background-color: #313131;
  color: #fff;
  font-size: 28rpx;
  line-height: 66rpx;
  padding: 60rpx 20rpx 20rpx 20rpx;
  border-radius: 24rpx;
  position: relative;
}
.close {
  width: 40rpx;
  height: 40rpx;
  background-color: #fff;
  color: #313131;
  text-align: center;
  line-height: 40rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  border-radius: 50%;
}
