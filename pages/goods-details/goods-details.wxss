/* pages/details/details.wxss */
@import "../../wxParse/wxParse.wxss";
.container{
  font-size: 30rpx;
  padding-bottom: 100rpx
}
/*底部导航*/
.ft-nav{
  display: flex;
  width: 100%;
  height: 92rpx;
  border-top: 2rpx #cccdd2 solid;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  z-index: 5
}
.contact,.toIndex{
  width: 128rpx;
  background-color: #ffffff;
  height: 90rpx;
  color: #9d9d9f;
  font-size: 22rpx;
  padding-top: 10rpx
}
.contact image,.toIndex image{
  width: 40rpx;
  height: 40rpx
}
.contact{
  position: relative
}
.contact-button{
  width: 128rpx;
  height: 90rpx;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0.001
}
.toShopcart,.toBuy{
  width: 247rpx;
  height: 92rpx;
  background-color: #f5a623;
  color: #ffffff;
  line-height: 100rpx;
  font-size: 32rpx
}
.toBuy{
  background-color: #ff7103
}
/*底部导航结束*/
/* 底部动画块 */
.shade{
  position: fixed;
  left: 0;
  right: 0;
  top: 1250rpx;
  bottom: 0;
  background-color: #000000;
  opacity: 0.5;
  z-index: 2
}
.animation{
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  bottom: -500rpx;
  left: 0;
  z-index: 10;
  overflow: visible
}
.animation-info{
  height: 174rpx;
  border-bottom: 2rpx #ececec solid;
  position: relative;
  display: flex;
  overflow: visible
}
.animation-goods-img{
  width: 200rpx;
  height: 200rpx;
  border: 2rpx #dedede solid;
  border-radius: 12rpx;
  position: relative;
  left: 22rpx;
  top: -50rpx;
}
.animation-text{
  width: 410rpx;
  margin-top: 16rpx;
  margin-left: 40rpx;
  font-size: 30rpx;
  line-height: 50rpx;
}
.animation-price{
  color: #f76017
}
.animation-close{
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 36rpx;
  border: 2rpx #65646a solid;
  border-radius: 50%;
  color: #65646a;
  position: absolute;
  right: 22rpx;
  top: 22rpx;
}
.animation-num{
  height: 96rpx;
  border-bottom: 2rpx #ececec solid;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 30rpx;
  line-height: 96rpx;
}
.animation-num-content{
  display: flex;
  justify-content: flex-end;
  align-items: center
}
.change-num{
  margin-left: 22rpx;
  display: flex;
}
.minus,.input-number,.plus{
  width: 60rpx;
  height: 50rpx;
  background-color: #f1f1f1;
  text-align: center;
  line-height: 50rpx;
  margin-left: 2rpx;
}
.minus,.plus{
  width: 50rpx;
  color: #707070
}
.animation-ft{
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  color: #ffffff;
  font-size: 30rpx;
  background-color: #f5a623
}
.animation-toPay{
  background-color: #ff7103
}
/* 底部动画块结束 */
.details-hd{
  width: 100%;
  height: 970rpx;
  background-color: #ffffff;
}
.hd-slide,.slide-image{
  width: 100%;
  height: 750rpx
}
.hd-content{
  position: relative;
  /* height: 220rpx */
}
.share{
  width: 60rpx;
  height: 88rpx;
  position: absolute;
  right: 40rpx;
  bottom: 120rpx;
  text-align: center
}
.share text{
  display: block;
  font-size: 24rpx;
  color: #5e5e5e;
}
.share image{
  width: 45rpx;
  height: 45rpx;
}
.share button{
  width: 60rpx;
  height: 88rpx;
  border: none;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
  z-index: 3
}
.goods-title{
  padding-left: 36rpx;
  line-height: 90rpx
}
.goods-price{
  padding-left: 36rpx;
  color: #ff7300
}
.freight{
  font-size: 24rpx;
  padding-left: 36rpx;
  color: #5e5e5e;
  line-height: 80rpx
}
.freight text{
  margin-left: 40rpx
}
.evaluate-title,.bd-title{
  background-color: #f4f4f4;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  position: relative
}
.evaluate-title image,.bd-title image{
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
  margin-right: 15rpx
}
.evaluate-title::before,.evaluate-title::after,.bd-title::before,.bd-title::after{
  content: '';
  width: 92rpx;
  height: 2rpx;
  background-color: #cecece;
  display: block;
  position: absolute;
  left: 222rpx;
  top: 50%
}
.evaluate-title::after,.bd-title::after{
  left: 438rpx
}
.evaluate-content{
  background: #ffffff
}
.evaluate-num,.bd-content-title{
  height: 80rpx;
  border-bottom: 2rpx #f2f2f2 solid;
  line-height: 80rpx;
  width: 710rpx;
  margin: 0 20rpx 20rpx 20rpx;
}
.evaluate-num text{
  float: right;
  color: #f76017
}
.evaluate-list{
  font-size: 28rpx;
  padding-left: 26rpx;
  padding-right: 26rpx;
  border-bottom: 10rpx #f2f2f2 solid;
}
.evaluateP{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx #f2f2f2 solid;
}
.evaluateName{
  color: #ff7300
}
.evaluateInfo{
  line-height: 56rpx;
}
.bd-content-title{
  margin-bottom: 20rpx;
}
.bd-content{
  width: 710rpx;
  margin: 0 auto;
  overflow: hidden
} 