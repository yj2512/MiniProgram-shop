/* pages/myInfo/myInfo.wxss */
.container{
  background: #f3f3f3;
  min-height: 1150rpx
}
.myInfo-hd{
  width: 634rpx;
  height: 234rpx;
  display: inline-flex;
  align-items: center;
  margin-left: 58rpx;
  margin-right: 58rpx;
  position: relative
}
.myInfo-hd image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.myInfo-hd text{
  font-size: 32rpx;
  margin-left: 60rpx
}
.myInfo-item{
  width: 100%;
  height: 90rpx;
  border-bottom: 2rpx #f3f3f3 solid;
  line-height: 90rpx;
  background-color: #ffffff;
  font-size: 28rpx;
  position: relative;
  color: #5f5f5f
}
.myInfo-item::after{
  content: '';
  width: 22rpx;
  height: 22rpx;
  border-top: 2rpx solid #5f5f5f;
  border-right: 2rpx solid #5f5f5f;
  position: absolute;
  right: 36rpx;
  top: 50%;
  margin-top: -11rpx;
  transform: rotate(45deg)
}
.myInfo-item image{
  width: 38rpx;
  height: 38rpx;
  vertical-align: middle;
  margin-left: 25rpx;
  margin-right: 20rpx
}