/* pages/shop/shop.wxss */
.location{
  height: 84rpx;
  border-bottom: 2rpx #ececec solid;
  font-size: 30rpx;
  line-height: 84rpx;
  color: #545454;
  padding-left: 26rpx;
  padding-right: 26rpx;
  display: flex;
  justify-content: space-between
}
.chooseLocation{
  height: 84rpx;
  display: flex;
  align-items: center
}
.chooseLocation image{
  display: block;
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}
.chooseLocation text{
  display: block;
  width: 290rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}