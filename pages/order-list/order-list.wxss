/* pages/order-List/order-list.wxss */
.container{
  background-color: #eeeeee;
  min-height: 1210rpx
}
.navbar{
  width: 100%;
  background: #ffffff;
  height: 88rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 16rpx #eeeeee solid;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 3
}
.navbar-item{
  width: 150rpx;
  height: 88rpx;
  font-size: 30rpx;
  line-height: 88rpx;
  text-align: center
}
.navbar-item.active{
  color: #ff7304;
  position: relative
}
.navbar-item.active::after{
  content: '';
  width: 150rpx;
  height: 2rpx;
  background: #ff7304;
  display: block;
  position: absolute;
  left: 0;
  bottom: 0
}
.margin-top{
  height: 104rpx
}
.order-list{
  background-color: #ffffff;
  margin-bottom: 20rpx
}
.order-hd{
  height: 96rpx;
  padding-left: 26rpx;
  padding-right: 30rpx;
  font-size: 30rpx;
  line-height: 96rpx;
  display: flex;
  justify-content: space-between;
}
.state{
  color: #ff7304;
}
.goods-items{
  background-color: #f8f8f8;
  height: 144rpx;
  padding-left: 26rpx;
  padding-right: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.goods-img{
  width: 120rpx;
  height: 120rpx
}
.goods-text{
  width: 550rpx;
  height: 120rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  display: flex;
  justify-content: space-between
}
.goods-num{
  text-align: right
}
.total-price{
  height: 94rpx;
  padding-right: 30rpx;
  font-size: 30rpx;
  text-align: right;
  line-height: 94rpx;
  border-bottom: 2rpx #f2f2f2 solid;
}
.total-price text{
  color: #ff7304;
}
.order-manage{
  height: 100rpx;
  font-size: 30rpx;
  line-height: 56rpx;
  text-align: center;
  padding-right: 30rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center
}
.cancel-order{
  width: 144rpx;
  height: 56rpx; 
  color: #313131;
  border: 2rpx #e5e5e5 solid;
  margin-right: 22rpx
}
.toPay{
  width: 90rpx;
  height: 56rpx;
  color: #fa7003;
  border: 2rpx #fa7003 solid
}
.message{
  width: 700rpx;
  margin: 0 auto;
  height: 150rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative
}
.message textarea{
  width: 606rpx;
  height: 120rpx;
  border: 2rpx #e5e5e5 solid;
  overflow: hidden
}
.message button{
  width: 90rpx;
  height: 56rpx;
  line-height: 56rpx;
  background-color: #fa7003;
  padding: 0;
  position: absolute;
  bottom: 30rpx;
  right: 2rpx;
  font-size: 28rpx;
  color: #ffffff
}
.section-ft{
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #949393
}