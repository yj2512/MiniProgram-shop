/* pages/tixian/tixian.wxss */
.container{
  background-color: #f2f2f2;
  min-height: 1200rpx;
}
.section-hd{
  height: 300rpx;
  background-color: #312e43;
  text-align: center;
  color: #ffffff;
  font-size: 24rpx;
  line-height: 40rpx;
}
.balance{
  color: #ffb023;
  font-size: 72rpx;
  line-height: 122rpx;
  padding-top: 76rpx;
}
.process{
  display: flex;
  justify-content: space-between
}
.process-item{
  width: 190rpx;
  height: 200rpx;
  text-align: center;
  position: relative
}
.process-item image{
  width: 100rpx;
  height: 100rpx;
  margin-top: 25rpx;
}
.process-title{
  font-size: 26rpx;
  line-height: 54rpx
}
.process-item:not(:last-child)::after{
  content: '';
  width: 15rpx;
  height: 15rpx;
  border-top: 2rpx #101010 solid;
  border-right: 2rpx #101010 solid;
  transform: rotate(45deg);
  position: absolute;
  left: 228rpx;
  top: 50%;
  margin-top: -8rpx
}
.form-list{
  background-color: #ffffff;
  padding-top: 60rpx;
  padding-bottom: 20rpx
}
.form-list input{
  width: 598rpx;
  height: 90rpx;
  border: 2rpx #dddddd solid;
  display: block;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 30rpx;
  font-size: 30rpx;
  padding-left: 22rpx;
}
.form-list button{
  height: 90rpx;
  width: 620rpx;
  line-height: 90rpx;
  background-color: #1aac19;
  border-radius: 12rpx;
  color: #ffffff;
  font-size: 32rpx
}
.tipInfo{
  height: 80rpx;
  font-size: 24rpx;
  color: #ed3743;
  display: inline-flex;
  align-items: center
}
.info-icon{
  margin-left: 30rpx;
  margin-right: 14rpx
}