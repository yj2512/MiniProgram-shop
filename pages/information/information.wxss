/* pages/information/information.wxss */
.container{
  background-color: #f3f3f3;
  min-height: 1200rpx
}
.title{
  color: #209988;
  font-size: 34rpx;
  height: 82rpx;
  line-height: 82rpx;
  text-align: center;
  background-color: #ffffff;
  border-bottom: 10rpx solid #f3f3f3;
}
.info-list{
  background-color: #ffffff;
  padding-top: 42rpx;
  padding-bottom: 2rpx
}
.info-item{
  width: 700rpx;
  height: 235rpx;
  border: 2rpx solid #f3f3f3;
  margin-bottom: 32rpx;
  margin-left: auto;
  margin-right: auto;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.item-content{
  height: 186rpx;
  width: 345rpx;
  padding-left: 66rpx
}
.item-title{
  font-size: 30rpx;
  height: 100rpx;
  line-height: 80rpx;
  color: #5a5a5a
}
.item-text{
  font-size: 28rpx;
  line-height: 42rpx;
  color: #909090;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.info-item image{
  width: 186rpx;
  height: 186rpx;
  display: block;
  padding-right: 24rpx
}