/* pages/payHtml/payHtml.wxss */
.container{
  background-color: #f3f3f3;
  min-height: 1200rpx
}
.goods-list{
  padding-left: 35rpx;
  padding-right: 35rpx;
  background-color: #ffffff;
  margin-bottom: 12rpx
}
.goods-item{
  height: 230rpx;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.goods-img{
  width: 200rpx;
  height: 200rpx
}
.goods-text{
  width: 460rpx;
  height: 200rpx;
}
.goods-title{
  font-size: 30rpx;
  line-height: 80rpx;
  height: 150rpx;
  color: #47464b
}
.goods-num{
  line-height: 50rpx;
  display: flex;
  justify-content: space-between
}
.goods-price{
  color: #f97300;
  font-size: 26rpx
}
.change-num{
  display: flex;
  align-items: center;
  font-size: 28rpx
}
.minus,.input-number,.plus{
  width: 46rpx;
  height: 46rpx;
  text-align: center;
  line-height: 46rpx;
}
.minus{
  color: #9b9b9b;
  border: 2rpx #9b9b9b solid;
  border-radius: 50%;
}
.plus{
  color: #ffffff;
  border-radius: 50%;
  background-color: #ff7000
}
.buyers-info{
  background-color: #ffffff;
  padding: 35rpx;
  margin-bottom: 12rpx
}
.buyers-info textarea{
  height: 145rpx;
  width: 680rpx;
  background-color: #e9e7e8;
  line-height: 50rpx;
  font-size: 28rpx;
  text-indent: 2em
}
.noAddress{
  height: 108rpx;
  margin-bottom: 12rpx;
  background-color: #ffffff;
  padding-left: 36rpx;
  line-height: 108rpx;
  font-size: 28rpx;
  position: relative
}
.noAddress::after{
  content: '';
  width: 18rpx;
  height: 18rpx;
  border-top: 3rpx #353535 solid;
  border-right: 3rpx #353535 solid;
  transform: rotate(45deg);
  position: absolute;
  right: 43rpx;
  top: 50%;
  margin-top: -10rpx;
}
.user-info{
  height: 138rpx;
  margin-bottom: 12rpx;
  background-color: #ffffff;
  padding: 22rpx 35rpx 0 35rpx;
  line-height: 60rpx;
  font-size: 28rpx
}
.user-info-hd{
  display: flex;
  justify-content: space-between
}
.user-info-hd view{
  display: flex
}
.name{
  width: 170rpx;
}
.change-address{
  color: #8d8d8d
}
.changeAddress{
  width: 90rpx
}
.goods-totalPrice,.freight{
  height: 100rpx;
  background-color: #ffffff;
  padding-left: 35rpx;
  padding-right: 35rpx;
  font-size: 28rpx;
  line-height: 100rpx;
  border-bottom: 2rpx #f2f2f2 solid;
  display: flex;
  justify-content: space-between
}
.goodsTotalPrice,.totalPrice text{
  color: #ff7000
}
.freight{
  margin-bottom: 20rpx
}
.section-ft{
  width: 100%;
  height: 110rpx;
  background-color: #ffffff;
  border-top: 2rpx #f2f2f2 solid;
  display: flex;
  justify-content: space-between;
  line-height: 110rpx;
  font-size: 30rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 3
}
.totalPrice{
  margin-left: 35rpx
}
.payNow{
  width: 235rpx;
  height: 110rpx;
  background-color: #ff7103;
  text-align: center;
  color: #ffffff;
}