/* pages/order-details/order-details.wxss */
.container{
  background-color: #f8f8f8;
  padding-bottom: 140rpx
}
.section-hd{
  height: 162rpx;
  background-color: #525961;
  padding-left: 30rpx;
  color: #ffffff;
  font-size: 34rpx;
  line-height: 70rpx;
  padding-top: 16rpx;
  margin-bottom: 20rpx;
}
.order-time,.express{
  height: 96rpx;
  line-height: 96rpx;
  padding-left: 30rpx;
  background-color: #ffffff;
  font-size: 30rpx;
  border-top: 2rpx #e8e8e8 solid;
  border-bottom: 2rpx #f0f0f0 solid;
  margin-bottom: 20rpx;
}
.express{
  margin-bottom: 0;
  padding-right: 30rpx;
  display: flex;
  justify-content: space-between
}
.user-info{
  height: 124rpx;
  background-color: #ffffff;
  border-bottom: 2rpx #f0f0f0 solid;
  font-size: 28rpx;
  line-height: 50rpx;
  padding-top: 20rpx;
  padding-left: 30rpx;
  margin-bottom: 20rpx;
}
.user-info-hd{
  display: flex;
}
.name{
  width: 200rpx
}
.goods-list{
  border-top: 18rpx #ffffff solid;
}
.goods-items{
  background-color: #f8f8f8;
  height: 155rpx;
  padding-left: 26rpx;
  padding-right: 26rpx;
  border-bottom: 3rpx #f0f0f0 solid;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.goods-img{
  width: 135rpx;
  height: 135rpx
}
.goods-text{
  width: 550rpx;
  height: 135rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  display: flex;
  justify-content: space-between
}
.goods-num{
  text-align: right
}
.goods-totalPrice,.discount,.freight,.totalPrice{
  padding-left: 30rpx;
  padding-right: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  background-color: #ffffff;
  border-bottom: 2rpx #f0f0f0 solid;
  display: flex;
  justify-content: space-between
}
.discount,.totalPrice{
  margin-bottom: 18rpx
}
.totalPrice{
  color: #fa7003;
}

.order-manage{
  width: 100%;
  height: 108rpx;
  font-size: 30rpx;
  line-height: 56rpx;
  text-align: center;
  background-color: #ffffff;
  border-top: 2rpx #f0f0f0 solid;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 3
}
.cancel-order{
  width: 144rpx;
  height: 56rpx;
  color: #313131;
  border: 2rpx #e5e5e5 solid;
  margin-right: 22rpx
}
.toPay{
  width: 144rpx;
  height: 56rpx;
  color: #fa7003;
  border: 2rpx #fa7003 solid;
  margin-right: 30rpx
}