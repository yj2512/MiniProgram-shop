/**index.wxss**/
.hd-slide{
  width: 100%;
  height: 375rpx;
}
.slide-image{
  width: 750rpx;
  height: 375rpx
}
.goods-class{
  border-bottom: 20rpx solid #f1f1f1;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap
}
.class-item{
  width: 160rpx;
  height: 196rpx;
  text-align: center;
  margin-top: 36rpx
}
.class-item image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%
}
.class-title{
  font-size: 28rpx;
}
.information{
  font-size: 28rpx;
  height: 374rpx;
  border-bottom: 18rpx solid #f1f1f1;
  line-height: 52rpx;
  float: left
}
.information::after{
  content: '';
  width: 0;
  height: 0;
  display: block;
  clear: both
}
.info_1{
  width: 300rpx;
  height: 374rpx;
  border-right: 4rpx solid #f1f1f1;
  padding-left: 32rpx;
  float: left
}
.info_1::after{
  content: '';
  display: block;
  width: 0;
  height: 0;
  clear: both
}
.info_1_title{
  color: #8cdf47;
  width: 328rpx;
  margin-top: 24rpx
}
.info_1_text{
  width: 328rpx
}
.info_1 image{
  display: block;
  width: 228rpx;
  height: 220rpx
}
.info_2{
  width: 376rpx;
  height: 185rpx;
  border-right: 6rpx solid #f1f1f1;
  border-bottom: 4rpx solid #f1f1f1;
  padding-left: 32rpx;
  display: flex
}
.info_2_content{
  width: 205rpx
}
.info_2_title{
  width: 200rpx;
  color: #ff5f6d;
  margin-top: 24rpx
}
.info_2_text{
  width: 200rpx
}
.info_2 image{
  display: block;
  width: 150rpx;
  height: 157rpx;
  margin-top: 18rpx
}
.info_3{
  width: 376rpx;
  height: 183rpx;
  border-right: 6rpx solid #f1f1f1;
  border-bottom: 4rpx solid #f1f1f1;
  padding-left: 32rpx;
  display: flex
}
.info_3_content{
  width: 205rpx
}
.info_3_title{
  color: #5bd2da;
  width: 200rpx;
  margin-top: 24rpx
}
.info_3_text{
  width: 200rpx
}
.info_3 image{
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin-top: 18rpx
}
.ad{
  border-bottom: 18rpx solid #f1f1f1;
  clear: both
}
.ad image{
  width: 750rpx;
}
.list-title{
  font-size: 32rpx;
  line-height: 82rpx;
  text-align: center;
  border-bottom: 2rpx solid #f1f1f1;
  position: relative
}
.list-title::after,.list-title::before{
  content: '';
  width: 80rpx;
  height: 3rpx;
  background-color: #ffa52d;
  border-radius: 50%;
  display: block;
  position: absolute;
  left: 208rpx;
  top: 50%;
  margin-top: -1rpx
}
.list-title::after{
  left: 456rpx;
}
.list-bd{
  display: flex;
  flex-wrap: wrap
}
.goods-item{
  width: 331rpx;
  height: 470rpx;
  border-bottom: 2rpx solid #f1f1f1;
  padding-left: 22rpx;
  padding-right: 22rpx;
  margin-top: 30rpx;
  position: relative
}
.goods-img{
  width: 331rpx;
  height: 326rpx
}
.goods-title{
  font-size: 28rpx;
  line-height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}
.price{
  font-size: 26rpx;
  color: #ff6400;
}
.price text{
  color: #999999;
  padding-left: 24rpx
}
.shopCart{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 26rpx;
  right: 34rpx
}
/* 底部动画块 */
.shade{
  position: fixed;
  left: 0;
  right: 0;
  top: 1250rpx;
  bottom: 0;
  background-color: #000000; 
  opacity: 0.5
}
.animation{
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  bottom: -500rpx;
  left: 0;
  z-index: 10;
  overflow: visible
}
.animation-info{
  height: 174rpx;
  border-bottom: 2rpx #ececec solid;
  position: relative;
  display: flex;
  overflow: visible
}
.animation-goods-img{
  width: 200rpx;
  height: 200rpx;
  border: 2rpx #dedede solid;
  border-radius: 12rpx;
  position: relative;
  left: 22rpx;
  top: -50rpx;
}
.animation-text{
  width: 410rpx;
  margin-top: 16rpx;
  margin-left: 40rpx;
  font-size: 28rpx;
  line-height: 50rpx;
}
.animation-price{
  color: #f76017
}
.animation-close{
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 36rpx;
  border: 2rpx #65646a solid;
  border-radius: 50%;
  color: #65646a;
  position: absolute;
  right: 22rpx;
  top: 22rpx;
}
.animation-num{
  height: 96rpx;
  border-bottom: 2rpx #ececec solid;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 28rpx;
  line-height: 96rpx;
}
.animation-num-content{
  display: flex;
  justify-content: flex-end;
  align-items: center
}
.change-num{
  margin-left: 22rpx;
  display: flex;
}
.minus,.input-number,.plus{
  width: 60rpx;
  height: 50rpx;
  background-color: #f1f1f1;
  text-align: center;
  line-height: 50rpx;
  margin-left: 2rpx;
}
.minus,.plus{
  width: 50rpx;
  color: #707070
}
.animation-ft{
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  color: #ffffff;
  font-size: 30rpx;
  background-color: #f5a623
}
/* 底部动画块结束 */