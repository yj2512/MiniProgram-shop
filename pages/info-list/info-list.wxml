<!--pages/info-list/info-list.wxml-->
<view class='container'>
  <view class='info-item' wx:for='{{items}}' wx:key='code' data-id='{{item.id}}' bindtap='info_details'>
    <image class='info-img' src='{{item.thumb}}'></image>
    <view class='info-content'>
      <view class='info-title'>{{item.title}}</view>
      <view class='info-text'>{{item.content}}</view>
    </view>
  </view>
</view>