/* pages/info-list/info-list.wxss */
.container{
  background: #f3f3f3;
  min-height: 1200rpx
}
.info-item{
  width: 690rpx;
  height: 350rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 22rpx;
  background: #ffffff;
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
}
.info-img{
  display: block;
  width: 330rpx;
  height: 310rpx;
}
.info-content{
  width: 345rpx;
  height: 310rpx;
}
.info-title{
  font-size: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
  margin-bottom: 8rpx 
}
.info-text{
  font-size: 28rpx;
  color: #595959;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;  
}